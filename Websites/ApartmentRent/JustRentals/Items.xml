<websiteInformation>
	<domain>justrentals.com</domain>
	<start_urls>
		<url>http://www.justrentals.com/search/uae/property/sort/pub_date__desc/per_page/20/page/1</url>
	</start_urls>
	<FirstDate>25th Aug 2017</FirstDate>
	<LastDate>25th Aug 2012</LastDate>
	<Category>apartment</Category>
	<Action>Rent</Action>
	<SpiderName>JustrentalsSpider</SpiderName>
	<Source>justrentals</Source>
	<LogFile>LogFiles/Apartment/Rent/apartment_rent_justrentals.log</LogFile>
	<TemplateAttributes>Websites/Templates/Apartments.xml</TemplateAttributes>
	<DateAttribute>
		<Name>posting_date</Name>
		<Place>DetailsPage</Place>
		<DateFunction>DayFirst</DateFunction>
	</DateAttribute>
	<MasterPage>
		<MasterAttributes>
			<Attribute>
				<defaultValue>NA</defaultValue>
				<name>ad_link</name>
				<xpath>.//h2[@class='item-title']/a/@href</xpath>
			</Attribute>
			<Attribute>
                    <defaultValue>NA</defaultValue>
                    <name>ad_title</name>
                    <xpath>.//h2[@class='item-title']/a/@title</xpath>
            </Attribute>
            <Attribute>
                <name>location</name>
                <defaultValue>NA</defaultValue>
                <xpath>normalize-space(./h3[@class='item-location']/text())</xpath>
            </Attribute>
		</MasterAttributes>
		<Containers>
			<xpath>.//div[@class='search-results']/div[@class='item-result  item-featured-listing  ']|.//div[@class='search-results']/div[@class='item-result  ']</xpath>
		</Containers>
		<NextPage>
			<xpath>.//div[@class='pagination']/a[normalize-space(.)='Next']/@rel</xpath>
			<prefix>http://www.justrentals.com/search/uae/property/sort/score__desc/per_page/20/page/</prefix>
		</NextPage>
		<LinkAttribute>
			<name>ad_link</name>
            <prefix>http://www.justrentals.com</prefix>
		</LinkAttribute>
	</MasterPage>
	<DetailsAttributes>
        <Attribute>
                <name>posting_date</name>
                <type>Selector</type>
                <defaultValue>NA</defaultValue>
                <xpath>normalize-space(.//div[@class='details-amenities-prop-name' and normalize-space(.)='Last Updated:']/following-sibling::div[1]/text())</xpath>
        </Attribute>
		<Attribute>
			<defaultValue>NA</defaultValue>
			<name>ad_link</name>
			<type>Meta</type>
		</Attribute>
		<Attribute>
			<defaultValue>NA</defaultValue>
			<name>ad_title</name>
			<type>Meta</type>
		</Attribute>
        <Attribute>
            <name>location</name>
            <defaultValue>NA</defaultValue>
            <type>Meta</type>
        </Attribute>
		<Attribute>
			<name>bedrooms</name>
			<type>Selector</type>
			<defaultValue>-1</defaultValue>
            <xpath>normalize-space(.//span[@class='icon-bed']/following-sibling::text())</xpath>
            <actions>
                <action>changeToInteger</action>
            </actions>
		</Attribute>
		<Attribute>
			<name>bathrooms</name>
			<type>Selector</type>
			<defaultValue>-1</defaultValue>
			<xpath>normalize-space(.//span[@class='icon-bath']/following-sibling::text())</xpath>
            <actions>
                <action>changeToInteger</action>
            </actions>
		</Attribute>
		<Attribute>
			<name>size</name>
			<type>Selector</type>
			<defaultValue>-1</defaultValue>
			<xpath>normalize-space(.//span[@class='icon-area_3']/following-sibling::text())</xpath>
			<actions>
                <action>extractNumbersFromString</action>
				<action>changeToFloat</action>
			</actions>
		</Attribute>
		<Attribute>
			<name>price</name>
			<type>Selector</type>
			<defaultValue>-1</defaultValue>
			<xpath>normalize-space(.//div[@class='price'])</xpath>
            <actions>
                <action>extractNumbersFromString</action>
                <action>changeToFloat</action>
            </actions>
		</Attribute>
		<Attribute>
			<name>furnished</name>
			<type>Selector</type>
			<defaultValue>NA</defaultValue>
            <xpath>normalize-space(.//div[@class='details-amenities-prop-name' and normalize-space(.)='Furnishings:']/following-sibling::div[1]/text())</xpath>
		</Attribute>
		<Attribute>
			<name>price_sqft</name>
			<type>Selector</type>
			<defaultValue>-1</defaultValue>
			<xpath>normalize-space(.//div[@class='details-amenities-prop-name' and normalize-space(.)='Price per sq ft:']/following-sibling::div[1]/text())</xpath>
            <actions>
                <action>extractNumbersFromString</action>
                <action>changeToInteger</action>
            </actions>
		</Attribute>
		<Attribute>
			<name>property_reference</name>
			<type>Selector</type>
			<defaultValue>NA</defaultValue>
			<xpath>normalize-space(.//div[@class='details-amenities-prop-name' and normalize-space(.)='Reference No:']/following-sibling::div[1]/text())</xpath>
		</Attribute>
        <Attribute>
            <name>ad_images</name>
            <defaultValue>NA</defaultValue>
            <type>Multiple</type>
            <xpath>.//div[@class='gallery-image-pager']/img/@src</xpath>
        </Attribute>
        <Attribute>
            <name>country</name>
            <defaultValue>UAE</defaultValue>
            <type>Selector</type>
            <xpath>This node does not have a corresponding xpath, that is why we are depending on the defaule value here</xpath>
        </Attribute>
        <Attribute>
            <name>city</name>
            <defaultValue>NA</defaultValue>
            <type>Selector</type>
            <xpath>normalize-space(.//div[@class='detail-heading']/h2/text())</xpath>
            <actions>
                <action>justRentalGetCity</action>
                <action>cleanCity</action>
            </actions>
        </Attribute>
        <Attribute>
            <name>payment_type</name>
            <defaultValue>Yearly</defaultValue>
            <type>Selector</type>
            <xpath>There is no corresponding xpath, that is why we are using the default value here </xpath>
        </Attribute>
        <Attribute>
            <name>description</name>
            <type>Selector</type>
            <xpath>string(.//div[@class='property-box description']/div[@class='details-container']/div[@class='content']//text())</xpath>
            <defaultValue>NA</defaultValue>
        </Attribute>
        <Attribute>
            <name>phone</name>
            <type>Selector</type>
            <defaultValue>NA</defaultValue>
            <xpath>.//a[@class='show_phone_number']/@data-phone</xpath>
        </Attribute>
        <Attribute>
        	<name>building</name>
        	<type>Selector</type>
        	<defaultValue>NA</defaultValue>
        	<xpath>.//div[@class='detail-heading']/h2/text()</xpath>
        	<actions>
        		<action>justRentalGetBuilding</action>
        	</actions>
        </Attribute>
        <Attribute>
        	<name>area</name>
        	<type>Selector</type>
        	<defaultValue>NA</defaultValue>
        	<xpath>.//div[@class='detail-heading']/h2/text()</xpath>
        	<actions>
        		<action>justRentalGetArea</action>
        	</actions>
        </Attribute>
        <Attribute>
            <name>longitude</name>
            <defaultValue>NA</defaultValue>
            <type>Selector</type>
            <xpath>this website does not have so we will use the default value and then there is a pipeline that trys to find a value using either google map or the master data</xpath>
        </Attribute>
        <Attribute>
            <name>latitude</name>
            <defaultValue>NA</defaultValue>
            <type>Selector</type>
            <xpath>this website does not have so we will use the default value and then there is a pipeline that trys to find a value using either google map or the master data</xpath>
        </Attribute>
    </DetailsAttributes>
</websiteInformation>
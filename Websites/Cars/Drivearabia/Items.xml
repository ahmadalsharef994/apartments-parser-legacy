<websiteInformation>
	<domain>drivearabia.com</domain>
	<start_urls>
		<url>http://www.drivearabia.com/classifieds/ad-category/uae/</url>
	</start_urls>
	<FirstDate>25th Aug 2015</FirstDate>
	<LastDate>25th Aug 2012</LastDate>
	<Category>Car</Category>
	<Action>Sale</Action>
	<SpiderName>DrivearabiaSpider</SpiderName>
	<Source>drivearabiaproperty</Source>
	<LogFile>LogFiles/Car/Sale/cars_drivearabia.log</LogFile>
	<DateAttribute>
		<Name>posting_date</Name>
		<Place>DetailsPage</Place>
		<DateFunction>MonthFirst</DateFunction>
	</DateAttribute>
	<MasterPage>
		<MasterAttributes>
			<Attribute>
				<defaultValue>NA</defaultValue>
				<name>link</name>
				<xpath>.//div[@class='post-left']/a/@href</xpath>
			</Attribute>
			<Attribute>
                    <defaultValue>NA</defaultValue>
                    <name>ad_title</name>
                    <xpath>.//div[@class='post-left']/a/@title</xpath>
            </Attribute>
		</MasterAttributes>
		<Containers>
			<xpath>.//div[@class='content_left']//div[@class='post-block-out ']</xpath>
		</Containers>
		<NextPage>
			<xpath>.//a[@class='next page-numbers']/@href</xpath>
		</NextPage>
		<LinkAttribute>
			<name>link</name>
		</LinkAttribute>
	</MasterPage>
	<DetailsAttributes>
		<Attribute>
			<defaultValue>NA</defaultValue>
			<name>link</name>
			<type>Meta</type>
		</Attribute>
		<Attribute>
			<defaultValue>NA</defaultValue>
			<name>ad_title</name>
			<type>Meta</type>
		</Attribute>
		<Attribute>
			<name>make</name>
			<type>Selector</type>
			<defaultValue>NA</defaultValue>
			<xpath>normalize-space(.//div[@class='bigright ']/ul//li/span[normalize-space(.)='Make:']/following-sibling::text())</xpath>
		</Attribute>
		<Attribute>
			<name>year</name>
			<type>Selector</type>
			<defaultValue>NA</defaultValue>
			<xpath>normalize-space(.//div[@class='bigright ']/ul//li/span[normalize-space(.)='Model Year:']/following-sibling::text())</xpath>
            <actions>
                <action>changeToInteger</action>
            </actions>
		</Attribute>
		<Attribute>
			<name>km</name>
			<type>Selector</type>
			<defaultValue>NA</defaultValue>
			<xpath>.//li[@id='cp_mileage_km']/text()</xpath>
			<actions>
				<action>changeToInteger</action>
			</actions>
		</Attribute>
		<Attribute>
			<name>body_type</name>
			<type>Selector</type>
			<defaultValue>NA</defaultValue>
			<xpath>.//li[@id='cp_type']/text()</xpath>
		</Attribute>
		<Attribute>
			<name>color</name>
			<type>Selector</type>
			<defaultValue>NA</defaultValue>
			<xpath>.//li[@id='cp_colour']/text()</xpath>
		</Attribute>
		<Attribute>
			<name>no_of_cylinders</name>
			<type>Selector</type>
			<defaultValue>NA</defaultValue>
			<xpath>.//li[@id='cp_cylinders']/text()</xpath>
            <actions>
                <action>changeToInteger</action>
            </actions>
		</Attribute>
		<Attribute>
			<name>transmission</name>
			<type>Selector</type>
			<defaultValue>NA</defaultValue>
			<xpath>.//li[@id='cp_gearbox']/text()</xpath>
		</Attribute>
		<Attribute>
			<name>fuel_type</name>
			<type>Selector</type>
			<defaultValue>NA</defaultValue>
			<xpath>.//li[@id='cp_fuel_type']/text()</xpath>
		</Attribute>
		<Attribute>
			<name>city</name>
			<type>Selector</type>
			<defaultValue>NA</defaultValue>
			<xpath>.//li[@id='cp_city_uae']/text()</xpath>
		</Attribute>
		<Attribute>
			<name>country</name>
			<type>Selector</type>
			<defaultValue>NA</defaultValue>
			<xpath>.//li[@id='cp_country_new']/text()</xpath>
		</Attribute>
		<Attribute>
			<name>expires</name>
			<type>Selector</type>
			<defaultValue>NA</defaultValue>
			<xpath>.//li[@id='cp_expires']/text()</xpath>
		</Attribute>
		<Attribute>
			<name>posting_date</name>
			<type>Selector</type>
			<defaultValue>NA</defaultValue>
			<xpath>.//li[@id='cp_listed']/text()</xpath>
		</Attribute>
		<Attribute>
			<name>phone</name>
			<type>Selector</type>
			<defaultValue>NA</defaultValue>
			<xpath>.//li[@id='cp_phone_number']/text()</xpath>
		</Attribute>
		<Attribute>
			<name>price</name>
			<type>Selector</type>
			<defaultValue>NA</defaultValue>
			<xpath>.//p[@class='post-price']/text()</xpath>
            <actions>
                <action>extractNumbersFromString</action>
                <action>changeToFloat</action>
            </actions>
		</Attribute>
		<Attribute>
            <name>poster</name>
            <defaultValue>NA</defaultValue>
            <type>Selector</type>
            <xpath>normalize-space(.//ul[@class='member']//li/span[normalize-space(.)='Listed by:']/following-sibling::a[1]/text())</xpath>
        </Attribute>
		<Attribute>
			<name>model</name>
			<defaultValue>NA</defaultValue>
			<type>Selector</type>
			<xpath>.//h1[@class='single-listing']/a/@title</xpath>
		</Attribute>
		<Attribute>
			<name>description</name>
			<type>Multiple</type>
			<defaultValue>NA</defaultValue>
			<xpath>.//h3[@class='description-area']/following-sibling::p[1]//text()</xpath>
		</Attribute>
		<Attribute>
			<name>ad_images</name>
			<type>Multiple</type>
			<defaultValue>NA</defaultValue>
			<xpath>.//div[@id='thumbs-pic']//a/img/@src</xpath>
		</Attribute>
	</DetailsAttributes>
</websiteInformation>
<websiteInformation>
    <domain>yzerproperty.com</domain>
    <start_urls>
        <url>https://yzerproperty.com/property-buy</url>
    </start_urls>
    <FirstDate>25th Aug 2020</FirstDate>
    <LastDate>03th Jun 2016</LastDate>
    <Category>Apartment</Category>
    <Action>sale</Action>
    <SpiderName>apartments_sale_yzerproperty</SpiderName>
    <Source>yzerproperty</Source>
    <TemplateAttributes>Websites/Templates/ApartmentsSale.xml</TemplateAttributes>
    <LogFile>LogFiles/Apartment/Sale/apartments_sale_yzerproperty.log</LogFile>
    <DateAttribute>
        <Place>DetailsPage</Place>
        <Name>posting_date</Name>
        <DateFunction>DayFirst</DateFunction>
        <action>extractDateYzerProperty</action>
    </DateAttribute>
    <Headers>
        <Header>
            <key>User-Agent</key>
            <value>Mozilla/5.0 (Windows NT 6.1; WOW64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/53.0.2785.116 Safari/537.36</value>
        </Header>
        <Header>
            <key>authority</key>
            <value>yzerproperty.com</value>
        </Header>
        <Header>
            <key>accept</key>
            <value>text/html,application/xhtml+xml,application/xml;q=0.9,image/webp,image/apng,*/*;q=0.8</value>
        </Header>
    </Headers>
    <MasterPage>
        <MasterAttributes>
            <Attribute>
                <defaultValue>NA</defaultValue>
                <name>ad_link</name>
                <xpath>.//a[@class='b-recent__link']/@href</xpath>
            </Attribute>
            <Attribute>
                <name>ad_title</name>
                <type>Selector</type>
                <xpath>.//span[@class='b-recent__title']/text()</xpath>
                <defaultValue>NA</defaultValue>
            </Attribute>
        </MasterAttributes>
        <Containers>
            <xpath>.//div[@class='b-section__col m-9']/div[contains(@class,'b-recent')]</xpath>
        </Containers>
        <NextPage>
            <xpath>.//ul[@class='b-pages']/li[last()]/a/@href</xpath>
            <prefix>https://yzerproperty.com</prefix>
        </NextPage>
        <LinkAttribute>
            <name>ad_link</name>
            <prefix>https://yzerproperty.com</prefix>
            <action>CorrectLinkYzerProperty</action>
        </LinkAttribute>
    </MasterPage>
    <DetailsAttributes>
        <Attribute>
            <name>ad_title</name>
            <defaultValue>NA</defaultValue>
            <type>Meta</type>
        </Attribute>
        <Attribute>
            <name>ad_link</name>
            <type>Meta</type>
            <defaultValue>NA</defaultValue>
        </Attribute>
        <Attribute>
            <name>posting_date</name>
            <defaultValue>-1</defaultValue>
            <type>Selector</type>
            <xpath>.//span[@class='b-context__update']/text()</xpath>
        </Attribute>
        <Attribute>
            <defaultValue>NA</defaultValue>
            <name>property_reference</name>
            <type>Selector</type>
            <xpath>normalize-space(.//div[@class='b-summary__info']/ul[@class='b-summary__base']/li/span[normalize-space(.)='Reference number:']/following-sibling::strong/text())</xpath>
        </Attribute>
        <Attribute>
            <defaultValue>NA</defaultValue>
            <name>rera_registration_number</name>
            <type>Selector</type>
            <xpath>normalize-space(.//div[@class='b-summary__info']/ul[@class='b-summary__base']/li/span[normalize-space(.)='RERA BRN:']/following-sibling::strong/text())</xpath>
        </Attribute>
        <Attribute>
            <defaultValue>-1</defaultValue>
            <name>price</name>
            <type>Selector</type>
            <xpath>normalize-space(.//div[@class='b-summary__price']/text())</xpath>
            <actions>
                <action>extractNumbersFromString</action>
                <action>changeToFloat</action>
            </actions>
        </Attribute>
        <Attribute>
            <defaultValue>-1</defaultValue>
            <name>size</name>
            <type>Selector</type>
            <xpath>normalize-space(string(.//ul[@class='b-features__col']/li/div[normalize-space(.)= 'Size']/following-sibling::div))</xpath>
            <actions>
                <action>extractNumbersFromString</action>
                <action>changeToFloat</action>
            </actions>
        </Attribute>
        <Attribute>
            <defaultValue>-1</defaultValue>
            <name>bathrooms</name>
            <type>Selector</type>
            <xpath>normalize-space(string(.//ul[@class='b-features__col']/li/div[normalize-space(.)= 'Bathrooms']/following-sibling::div))</xpath>
            <actions>
                <action>extractNumbersFromString</action>
                <action>changeToInteger</action>
            </actions>
        </Attribute>
        <Attribute>
            <defaultValue>-1</defaultValue>
            <name>bedrooms</name>
            <type>Selector</type>
            <xpath>normalize-space(string(.//ul[@class='b-features__col']/li/div[normalize-space(.)= 'Bedrooms']/following-sibling::div))</xpath>
            <actions>
                <action>checkIfStudioBedroom</action>
                <action>extractNumbersFromString</action>
                <action>changeToInteger</action>
            </actions>
        </Attribute>
        <Attribute>
            <defaultValue>-1</defaultValue>
            <name>price_sqft</name>
            <type>Selector</type>
            <xpath>normalize-space(string(.//ul[@class='b-features__col']/li/div[normalize-space(.)= 'Price']/following-sibling::div))</xpath>
             <actions>
                <action>extractNumbersFromString</action>
                <action>changeToFloat</action>
            </actions>
        </Attribute>
        <Attribute>
            <defaultValue>NA</defaultValue>
            <name>type</name>
            <type>Selector</type>
            <xpath>normalize-space(string(.//ul[@class='b-features__col']/li/div[normalize-space(.)= 'Property type']/following-sibling::div))</xpath>
            <actions>
                <action>changeToSmallLetters</action>
            </actions>
        </Attribute>
        <Attribute>
            <defaultValue>NA</defaultValue>
            <name>trade_name</name>
            <type>Selector</type>
            <xpath>normalize-space(.//div[@class='b-summary__info']/ul[@class='b-summary__base']/li/span[normalize-space(.)='Broker:']/following-sibling::a/text())</xpath>
        </Attribute>
        <Attribute>
            <defaultValue>NA</defaultValue>
            <name>phone</name>
            <type>Selector</type>
            <xpath>normalize-space(.//section[@class='b-context js-property-action']/@data-property)</xpath>
            <actions>
                <action>yzerpropertyExtractPhone</action>
            </actions>
        </Attribute>
        <Attribute>
            <name>country</name>
            <defaultValue>UAE</defaultValue>
            <type>Selector</type>
            <xpath>This website does not have value for the country. Bashar suggested to use the default value as UAE always</xpath>
            <actions>
                <action>changeToSmallLetters</action>
            </actions>
        </Attribute>
        <Attribute>
            <name>city</name>
            <type>Selector</type>
            <defaultValue>na</defaultValue>
            <xpath>normalize-space(.//ul[@class='b-breadcrumb']/li[4]/a/span/text())</xpath>
            <actions>
                <action>cleanCity</action>
            </actions>
        </Attribute>
        <Attribute>
            <name>area</name>
            <type>Selector</type>
            <defaultValue>NA</defaultValue>
            <xpath>normalize-space(.//ul[@class='b-breadcrumb']/li[5]/a/span/text())</xpath>
            <actions>
                <action>changeToSmallLetters</action>
            </actions>
        </Attribute>
        <Attribute>
            <name>subarea</name>
            <type>Selector</type>
            <defaultValue>NA</defaultValue>
            <xpath>normalize-space(.//ul[@class='b-breadcrumb']/li[6]/a/span/text())</xpath>
            <actions>
                <action>changeToSmallLetters</action>
            </actions>
        </Attribute>
        <Attribute>
            <name>building</name>
            <type>Selector</type>
            <defaultValue>NA</defaultValue>
            <xpath>normalize-space(.//ul[@class='b-breadcrumb']/li[last()-1]/a/span/text())</xpath>
            <actions>
                <action>changeToSmallLetters</action>
            </actions>
        </Attribute>
        <Attribute>
            <type>Selector</type>
            <name>longitude</name>
            <xpath>.//div[@class='b-onmap js-load-map']/@data-map-lng</xpath>
            <defaultValue>NA</defaultValue>
        </Attribute>
        <Attribute>
            <type>Selector</type>
            <name>latitude</name>
            <xpath>.//div[@class='b-onmap js-load-map']/@data-map-lat</xpath>
            <defaultValue>-1</defaultValue>
        </Attribute>
        <Attribute>
            <type>Multiple</type>
            <name>ad_images</name>
            <xpath>.//div[@class='b-gallery fotorama']/img/@src</xpath>
            <defaultValue>NA</defaultValue>
        </Attribute>
    <Attribute>
			<name>description</name>
			<defaultValue>NA</defaultValue>
			<type>Selector</type>
			<xpath>normalize-space(string(.//div[@class='b-hero__proptext js-load-map-POI hide-p']))</xpath>
    </Attribute>
</DetailsAttributes>
</websiteInformation>
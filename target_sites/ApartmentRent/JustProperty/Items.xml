<websiteInformation>
	<domain>justproperty.com</domain>
	<start_urls>
		<url>https://www.justproperty.com/en/rent/uae/properties-for-rent/?sort=pub_date__desc&amp;map=true</url>
	</start_urls>
	<FirstDate>25th Aug 2017</FirstDate>
	<LastDate>28th May 2016</LastDate>
	<Category>apartment</Category>
	<Action>rent</Action>
	<SpiderName>apartment_rent_justproperty</SpiderName>
	<Source>justproperty</Source>
	<LogFile>LogFiles/Apartment/Rent/apartments_rent_justproperty_log.txt</LogFile>
	<TemplateAttributes>Websites/Templates/ApartmentsRent.xml</TemplateAttributes>
	<DateAttribute>
		<Name>posting_date</Name>
        <Place>DetailsPage</Place>
        <DateFunction>DayFirst</DateFunction>
	</DateAttribute>
	<MasterPage>
        <MasterAttributes>
            <Attribute>
                <defaultValue>NA</defaultValue>
                <name>ad_title</name>
                <xpath>normalize-space(.//h2[contains(@class, 'item-title')]/text())</xpath>
            </Attribute>
            <Attribute>
                <defaultValue>NA</defaultValue>
                <name>ad_link</name>
                <xpath>normalize-space(.//a[@class='item-title-link']/@href)</xpath>
            </Attribute>
        </MasterAttributes>
        <Containers>
            <xpath>.//div[@class='suggested-search-results']/div[@class='item-result']|.//div[@class='search-results']/div[@class='item-result']</xpath>
        </Containers>
        <NextPage>
            <xpath>string(.//div[@class='pagination']//a[last()]/@href)</xpath>
             <prefix>http://www.justproperty.com</prefix>
        </NextPage>
        <LinkAttribute>
            <name>ad_link</name>
            <prefix>http://www.justproperty.com</prefix>
        </LinkAttribute>
    </MasterPage>
    <DetailsAttributes>
        <Attribute>
            <name>ad_title</name>
            <type>Meta</type>
            <defaultValue>NA</defaultValue>
        </Attribute>
        <Attribute>
            <defaultValue>NA</defaultValue>
            <name>ad_link</name>
            <type>Meta</type>
        </Attribute>
        <Attribute>
            <defaultValue>NA</defaultValue>
            <name>property_reference</name>
            <type>Selector</type>
            <xpath>normalize-space(.//ul[@class='details-amenities']//li[@class='amenity']/label[normalize-space(.) = 'Reference No:']/following-sibling::text())</xpath>
        </Attribute>
        <Attribute>
            <defaultValue>NA</defaultValue>
            <name>type</name>
            <type>Selector</type>
            <xpath>normalize-space(.//ul[@class='details-amenities']//li[@class='amenity']/label[normalize-space(.) = 'Type:']/following-sibling::text())</xpath>
            <actions>
                <action>changeToSmallLetters</action>
            </actions>
        </Attribute>
         <Attribute>
            <defaultValue>-1</defaultValue>
            <name>bedrooms</name>
            <type>Selector</type>
            <xpath>normalize-space(.//ul[@class='details-amenities']//li[@class='amenity']/label[normalize-space(.) = 'Bedrooms:']/following-sibling::text())</xpath>
            <actions>
                    <action>checkIfStudioBedroom</action>
                    <action>changeToInteger</action>
            </actions>
        </Attribute>
         <Attribute>
            <defaultValue>-1</defaultValue>
            <name>size</name>
            <type>Selector</type>
           <xpath>normalize-space(.//ul[@class='details-amenities']//li[@class='amenity']/label[normalize-space(.) = 'Floor Area:']/following-sibling::text())</xpath>
            <actions>
                <action>extractNumbersFromString</action>
                <action>changeToFloat</action>
            </actions>
        </Attribute>
        <Attribute>
            <defaultValue>-1</defaultValue>
            <name>price</name>
            <type>Selector</type>
            <xpath>normalize-space(.//ul[@class='details-amenities']//li[@class='amenity']/label[normalize-space(.) = 'Price:']/following-sibling::text())</xpath>
            <actions>
                <action>extractNumbersFromString</action>
                <action>changeToFloat</action>
            </actions>
        </Attribute>
        <Attribute>
			<name>price_sqft</name>
			<defaultValue>-1</defaultValue>
			<type>Selector</type>
			<xpath>normalize-space(.//ul[@class='details-amenities']//li[@class='amenity']/label[normalize-space(.) = ' Price/sq. ft.: ']/following-sibling::text())</xpath>
			<actions>
				<action>extractNumbersFromString</action>
				<action>changeToFloat</action>
			</actions>
		</Attribute>
         <Attribute>
            <defaultValue>NA</defaultValue>
            <name>payment_type</name>
            <type>Selector</type>
            <xpath>normalize-space(.//ul[@class='details-amenities']//li[@class='amenity']/label[normalize-space(.) ='Rental Term:']/following-sibling::text())</xpath>
             <actions>
                 <action>justPropertyPaymentType</action>
                 <action>changeToSmallLetters</action>
            </actions>
        </Attribute>
        <Attribute>
            <defaultValue>NA</defaultValue>
            <name>furnished</name>
            <type>Selector</type>
            <xpath>normalize-space(.//ul[@class='details-amenities']//li[@class='amenity']/label[normalize-space(.) = 'Furnishings:']/following-sibling::text())</xpath>
            <actions>
                <action>changeToSmallLetters</action>
            </actions>
        </Attribute>
        <Attribute>
            <defaultValue>NA</defaultValue>
            <name>posting_date</name>
            <type>Selector</type>
            <xpath>normalize-space(.//ul[@class='details-amenities']//li[@class='amenity']/label[normalize-space(.) = 'Last Updated:']/following-sibling::text())</xpath>
        </Attribute>
        <Attribute>
            <defaultValue>-1</defaultValue>
            <name>bathrooms</name>
            <type>Selector</type>
            <xpath>normalize-space(.//ul[@class='details-amenities']//li[@class='amenity']/label[normalize-space(.) = 'Baths:']/following-sibling::text())</xpath>
            <actions>
                <action>changeToInteger</action>
            </actions>
        </Attribute>
        <Attribute>
            <defaultValue>UAE</defaultValue>
            <name>country</name>
            <type>Selector</type>
            <xpath>This item doesn not exist so we will use the default value</xpath>
            <actions>
                <action>changeToSmallLetters</action>
            </actions>
        </Attribute>
        <Attribute>
            <defaultValue>NA</defaultValue>
            <name>city</name>
            <type>Selector</type>
            <xpath>normalize-space(.//ul[@class='breadcrumb']/li[1]/a/span/text())</xpath>
            <actions>
                <action>cleanCity</action>
            </actions>
        </Attribute>
        <Attribute>
            <defaultValue>NA</defaultValue>
            <name>area</name>
            <type>Selector</type>
            <xpath>normalize-space(.//ul[@class='breadcrumb']/li[2]/a/span/text())</xpath>
            <actions>
                <action>changeToSmallLetters</action>
            </actions>
        </Attribute>
        <Attribute>
            <defaultValue>NA</defaultValue>
            <name>building</name>
            <type>Selector</type>
            <xpath>normalize-space(.//ul[@class='breadcrumb']/li[3]/a/span/text())</xpath>
            <actions>
                <action>changeToSmallLetters</action>
            </actions>
        </Attribute>
        <Attribute>
            <defaultValue>NA</defaultValue>
            <name>subarea</name>
            <type>Selector</type>
            <xpath>It does not exist so pleas use the defaut value</xpath>
            <actions>
                <action>changeToSmallLetters</action>
            </actions>
        </Attribute>
        <Attribute>
            <defaultValue>NA</defaultValue>
            <name>amenities</name>
            <type>Selector</type>
            <xpath>normalize-space(string(.//ul[@class='amenities']))</xpath>
        </Attribute>
        <Attribute>
            <defaultValue>NA</defaultValue>
            <name>longitude</name>
            <type>Selector</type>
            <xpath>.//div[@id='property-map']/@data-lon</xpath>
        </Attribute>
        <Attribute>
            <defaultValue>NA</defaultValue>
            <name>latitude</name>
            <type>Selector</type>
            <xpath>.//div[@id='property-map']/@data-lat</xpath>
        </Attribute>
        <Attribute>
            <defaultValue>NA</defaultValue>
            <name>description</name>
            <type>Selector</type>
            <xpath>string(.//div[@class='content details-description'])</xpath>
        </Attribute>
        <Attribute>
            <defaultValue>NA</defaultValue>
            <name>trade_name</name>
            <type>Selector</type>
            <xpath>normalize-space(.//h3[normalize-space(.) = 'Real Estate Agency Details']/following-sibling::p/text())</xpath>
        </Attribute>
        <Attribute>
            <name>ad_images</name>
            <defaultValue>NA</defaultValue>
            <type>Multiple</type>
            <xpath>.//div[@class='gallery-image-pager']/img/@data-src</xpath>
        </Attribute>
        <Attribute>
            <defaultValue>NA</defaultValue>
            <name>phone</name>
            <type>Selector</type>
            <xpath>.//button[@data-role='call']/@data-phone</xpath>
        </Attribute>
    </DetailsAttributes>
</websiteInformation>